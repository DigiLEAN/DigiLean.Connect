{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["es2021", "dom"],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "checkJs": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "inlineSources": true,
        "jsx": "preserve",
        "outDir": "./dist",
        "noImplicitAny": false,
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true

    }
}