{
    "extends": "@tsconfig/node18/tsconfig.json",
    "ts-node": {
        "require": ["tsconfig-paths/register"],
        "transpileOnly": false,
        "files": true,
        "compilerOptions": {
            "noImplicitAny": true,
        }
    },
    "compilerOptions": {
        "outDir": "lib",
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@lib/*": ["src/*"],
            "@digilean/connect": ["src/index"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}