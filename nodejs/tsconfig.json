{
    // This is an alias to @tsconfig/node16: https://github.com/tsconfig/bases
    "extends": "ts-node/node16/tsconfig.json",
    "ts-node": {
        "transpileOnly": false,
        "files": true,
        "clean": true,
        "compilerOptions": {
            "noImplicitAny": true
        }
    },
    "compilerOptions": {
        "outDir": "lib",
        "moduleResolution": "Node16",
        "baseUrl": ".",
        "paths": {
            "@lib/*": ["src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "lib"]
}